# Environment Configuration
NODE_ENV=development

# Server
PORT=3000

# MongoDB
MONGO_URI=mongodb://localhost:27017/otp_service_db

# Redis
REDIS_URI=redis://localhost:6379

# Security
CLIENT_SECRET_KEY=your-secret-key-change-me-in-production

# Email (Brevo/SMTP)
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=your_brevo_smtp_user@example.com
BREVO_SMTP_PASS=your_brevo_smtp_password
SENDER_EMAIL=otp-service@yourdomain.com

# SMS (Twilio)
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15005550006

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRY_SECONDS=300
OTP_EXPIRY_MINUTES=60

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
